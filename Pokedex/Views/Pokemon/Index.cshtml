@using Application.ViewModels.Pokemon
@using Application.ViewModels.Region
@model List<PokemonViewModel>
@{
    ViewData["Title"] = "Pokemon";
}

<navbar>
<div class="row mb-3">
    <div class="col-3 offset-9">
        <a asp-controller="Pokemon" asp-action="Create" class="btn btn-outline-success">Registrar nuevo Pokémon</a>
    </div>
</div>
</navbar>


<div class="container-fluid">
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay pokemons</h2>
        }
        else
        {
            @foreach (PokemonViewModel item in Model)
            {
                <div class="col-4 mb-3">
                    <div class="card- shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.imgPokemon"/>
                        <div class="card-body">
                            <h4>@item.nombre</h4>
                            <p class="card-text">Tipo Primario: @item.TipoPrimarioName</p>
                            <p class="card-text">Tipo Secundario: @item.TipoSecundarioName</p>
                            <p class="card-text">Region: @item.RegionName</p>
                            <div class="btn-group">
                                <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.idPokemon" class="btn btn-sm btn-outline-info">Editar</a>
                                <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.idPokemon" class="btn btn-sm btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>